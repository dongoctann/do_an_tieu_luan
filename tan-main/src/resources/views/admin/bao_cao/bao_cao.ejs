<%- include('../header.ejs') %>
    <%- include('../aside.ejs') %>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <div class="row">
                <div class="col-md-6">

                </div>
                <div class="col-md-6 mt-2 ">
                    <form action="/admin/search_baocao" id="combined-form" method="get" class="sidebar-form_1 mx-2">
                        <div class="input-group mb-3" style="width: 80%;">
                            <input type="text" name="name" class="form-control"
                                placeholder="Nhập sản phẩm bạn muốn tìm kiếm" aria-label="Recipient's username"
                                aria-describedby="button-addon2">
                            <button class="btn btn-outline-secondary" type="submit" id="button-addon2"><i
                                    class="fa fa-search"></i></button>
                        </div>
                    </form>
                </div>
            </div>
            <table style="margin-top: 50px;" class="table table-PW table-hover table-borderless align-middle">
                <thead class="table-light">
                    <caption> Báo cáo sản phẩm</caption>
                    <tr style="background-color: #e9e9e9;">
                        <th>STT</th>
                        <th class="text-center">hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Màu sắc</th>
                        <th>Dung lượng</th>
                        <th>Số lượng nhập</th>
                        <th>SL đang giao</th>
                        <th>Số lượng bán</th>
                        <th>Số lượng còn lại</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    <% if (data && data.length> 0) { %>
                        <% data.forEach(function (bao_cao, index) { %>
                            <tr>
                                <td>
                                    <%= index + 1 %>
                                </td>
                                <td class="text-center">
                                    <img style="width: 150px; height: 100px;" class="img-thumbnail"
                                        src="/imgUpload/<%= bao_cao.hinh_anh %>">
                                </td>
                                <td>
                                    <%= bao_cao.ten_san_pham %>
                                </td>
                                <td>
                                    <%= bao_cao.ten_mau_sac %>
                                </td>
                                <td>
                                    <%= bao_cao.ten_dung_luong %>
                                </td>
                                <td>
                                    <%= bao_cao.so_luong_nhap %>

                                </td>
                                <td>
                                    <%= bao_cao.so_luong_dang_giao %>

                                </td>
                                <td>
                                    <%= bao_cao.so_luong_ban %>

                                </td>
                                <td>
                                    <%= bao_cao.so_luong_con_lai %>
                                </td>
                            </tr>
                            <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7">Không có dữ liệu</td>
                                    </tr>
                                    <% } %>

                </tbody>
            </table>
        </div>

        <%- include('../footer.ejs') %>