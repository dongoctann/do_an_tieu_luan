<%- include('../header.ejs') %>
    <%- include('../aside.ejs') %>
        <div class="content-wrapper">
            <div class="mt-3">
                <div class="container-fluid">
                    <!-- thêm class này vào form để validation needs-validation -->
                    <form method="POST" action="/admin/update_baohanh/<%= data.id %>" class="row g-3">
                        <div class="col-md-4">
                            <label for="" class="form-label">Hóa đơn</label>
                            <input type="text" name="hd" class="form-control" id="" value="<%- data.id %>" disabled>
                        </div>
                        <div class="col-md-4">
                            <label for="" class="form-label"> Thông tin sản phẩm </label>
                            <input type="" name="tt_sp"
                                value="<%- data.ten_san_pham%> - <%- data.ten_mau_sac%> - <%- data.ten_dung_luong%> - <%- data.so_thang_bao_hanh%>"
                                class="form-control" disabled>
                        </div>
                        <div class="col-md-4">
                            <label for="validationCustom03" class="form-label">Bảo hành</label>
                            <div class="select-wrapper">
                                <select class="form-control" name="loai_bao_hanh" id="">
                                    <option value="">Hình thức</option>
                                    <option value="Bảo hành"> Bảo hành </option>
                                    <option value="Sửa chữa"> Sửa chữa </option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label for="" class="form-label">Tiêu đề</label>
                            <input type="text" name="tieu_de" class="form-control" id="" value="<%= data.tieu_de %>">
                        </div>
                        <div class="col-md-4">
                            <label for="validationCustom03" class="form-label">Ngày bắt đầu</label>
                            <input type="date" name="ngay_bat_dau" class="form-control" id="validationCustom03"
                                value="<%= data.ngay_bat_dau instanceof Date ? data.ngay_bat_dau.toISOString().split('T')[0] : '' %>">
                        </div>
                        <div class="col-md-4">
                            <label for="validationCustom03" class="form-label">Ngày kết thúc</label>
                            <input type="date" name="ngay_ket_thuc" class="form-control" id="validationCustom03"
                                value="<%= data.ngay_ket_thuc instanceof Date ? data.ngay_ket_thuc.toISOString().split('T')[0] : '' %>">
                        </div>
                        <div class="col-md-4">
                            <label for="validationCustom03" class="form-label">Chi phí</label>
                            <input type="text" name="chi_phi" class="form-control" id="validationCustom03"
                                value="<%= data.chi_phi %>"></input>
                        </div>
                        <div class="col-md-4">
                            <label for="validationCustom03" class="form-label">Trạng thái</label>
                            <select class="form-control" name="trang_thai" id="">
                                <option value="1"> Chờ xác nhận </option>
                                <option value="2"> Đã xác nhận </option>
                                <option value="3"> Đã bảo hành </option>
                                <option value="4"> Đã hoàn thành </option>
                                <option value="5"> Hủy </option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="validationCustom03" class="form-label">Ghi chú</label>
                            <textarea type="text" name="ghi_chu" class="form-control" id="validationCustom03"
                                value=""><%= data.ghi_chu %></textarea>
                        </div>

                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Submit form</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
        <%- include('../footer.ejs') %>