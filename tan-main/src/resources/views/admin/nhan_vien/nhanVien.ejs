<%- include('../header.ejs') %>
    <%- include('../aside.ejs') %>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <div class="row">
                <div class="col-md-6">
                    <% if(user && user.ten_nhan_vien==='Admin' ) { %>
                        <button type="button" class="btn btn-outline-primary mt-2 mx-2" data-bs-toggle="modal"
                            data-bs-target="#staticBackdrop">
                            Thêm nhân viên
                        </button>
                        <% } else { %>
                            <button type="button" class="btn btn-outline-primary mt-2 mx-2" disabled>
                                Thêm nhân viên
                            </button>
                            <% } %>

                </div>
                <div class="col-md-6 mt-2 ">
                    <form action="/admin/search_nhanvien" id="combined-form" method="get" class="sidebar-form_1 mx-2">
                        <div class="input-group mb-3" style="width: 80%;">
                            <input type="text" name="name" class="form-control" placeholder="Nhập tên bạn muốn tìm kiếm"
                                aria-label="Recipient's username" aria-describedby="button-addon2">
                            <button class="btn btn-outline-secondary" type="submit" id="button-addon2"><i
                                    class="fa fa-search"></i></button>
                        </div>
                    </form>
                </div>
                <div class="modal fade " id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false"
                    tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-scrollable">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="staticBackdropLabel">Thêm nhân viên</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form method="POST" action="/admin/add_nhanvien" class="row g-3 needs-validation"
                                    novalidate>
                                    <div class="col-md-6">
                                        <label for="validationCustom01" class="form-label">Tên nhân viên</label>
                                        <input type="text" name="ten_nhan_vien" class="form-control"
                                            id="validationCustom01" value="" required>
                                        <div class="invalid-feedback">
                                            Hãy nhập Họ và Tên
                                        </div>
                                    </div>
                                    <!-- <textarea name="content" id="editor1"></textarea> -->

                                    <div class="col-md-6">
                                        <label for="validationCustom02" class="form-label">Email</label>
                                        <input type="email" name="email" class="form-control" id="validationCustom02"
                                            value="" required>
                                        <div class="invalid-feedback">
                                            Hãy nhập email
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="validationCustom03" class="form-label">Số điện thoại</label>
                                        <input type="text" name="so_dien_thoai" class="form-control"
                                            id="validationCustom03" required>
                                        <div class="invalid-feedback">
                                            Hãy nhập số điện thoại
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="validationCustom03" class="form-label">Địa chỉ</label>
                                        <input type="text" name="dia_chi" class="form-control" id="validationCustom03"
                                            required>
                                        <div class="invalid-feedback">
                                            Hãy nhập địa chỉ
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="validationCustom02" class="form-label"> Mật khẩu </label>
                                        <input type="password" name="mat_khau" class="form-control"
                                            id="validationCustom02" value="" required>
                                        <div class="invalid-feedback">
                                            Hãy nhập mật khẩu
                                        </div>
                                    </div>
                                    <!-- <div class="col-md-6">
                                        <label for="validationCustom03" class="form-label">Ngày sinh</label>
                                        <input type="date" name="ngay_sinh" class="form-control" id="validationCustom03"
                                            required>
                                        <div class="invalid-feedback">
                                            Hãy nhập ngày sinh
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="validationCustom03" class="form-label">Giới tính</label>
                                        <input type="" name="gioi_tinh" class="form-control" id="validationCustom03"
                                            required>
                                        <div class="invalid-feedback">
                                            Hãy nhập giới tính
                                        </div>
                                    </div> -->
                                    <div class="col-12">
                                        <button class="btn btn-primary" type="submit">Submit form</button>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary">Understood</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <table style="margin-top: 50px;" class="table table-PW table-hover table-borderless align-middle">
                <thead class="table-light">
                    <caption>Danh sách nhân viên</caption>
                    <tr style="background-color: #e9e9e9;">
                        <th>STT</th>
                        <th>Tên nhân viên</th>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th>Địa chỉ</th>
                        <th>Mật khẩu</th>
                        <th> Ghi chú</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    <% if (data && data.length> 0) { %>
                        <% data.forEach(function (nhanvien, index) { %>
                            <tr>
                                <td>
                                    <%= index + 1 %>
                                </td>
                                <td>
                                    <%= nhanvien.ten_nhan_vien %>
                                </td>
                                <td>
                                    <%= nhanvien.email %>
                                </td>
                                <td>
                                    <%= nhanvien.so_dien_thoai %>
                                </td>
                                <td>
                                    <%= nhanvien.dia_chi %>
                                </td>
                                <td>
                                    <% if(user && user.ten_nhan_vien==='Admin' ) { %>
                                        <%= nhanvien.mat_khau %>
                                            <% } else { %>
                                                *******
                                                <% } %>
                                </td>
                                <td>
                                    <%- nhanvien.content %>
                                </td>
                                <td>
                                    <div class="d-flex ">
                                        <% if(user && user.ten_nhan_vien==='Admin' ) { %>
                                            <a href="/admin/edit_nhanvien/<%= nhanvien.id %>"
                                                class="btn btn-outline-success btn-sm mx-1"><i
                                                    class="fa-solid fa-pen-to-square"></i></a>
                                            <a href="/admin/delete_nhanvien/<%= nhanvien.id %>"
                                                class="btn btn-outline-danger btn-sm mx-1"><i
                                                    class="fa-solid fa-trash"></i></a>
                                            <% } else { %>
                                                <button class="btn btn-outline-success btn-sm mx-1" disabled><i
                                                        class="fa-solid fa-pen-to-square"></i></button>
                                                <button class="btn btn-outline-danger btn-sm mx-1" disabled><i
                                                        class="fa-solid fa-trash"></i></button>
                                                <% } %>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7">Không có dữ liệu</td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
        <!-- /.content-wrapper -->
        <%- include('../footer.ejs') %>