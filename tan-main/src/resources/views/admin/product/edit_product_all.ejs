<%- include('../header.ejs') %>
    <%- include('../aside.ejs') %>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <div class="mt-3">
                <div class="container-fluid">
                    <form method="POST" action="/admin/update_product_all/<%= data.id %>"
                        class="row g-3 needs-validation" novalidate enctype="multipart/form-data">
                        <div class="col-md-4">
                            <label for="validationCustom01" class="form-label">Tên dòng sản phẩm </label>
                            <input type="value" name="" value="<%- data.ten_san_pham %>" class="form-control"
                                id="validationCustom02" required disabled>
                        </div>
                        <div class="col-md-4">
                            <label for="validationCustom02" class="form-label"> Hình ảnh </label>
                            <input type="file" name="hinh_anh4" class="form-control" id="validationCustom02" required>
                            <input type="hidden" name="hinh_anh" value="<%- data.hinh_anh_chi_tiet %>">
                        </div>
                        <div class="col-md-4">
                            <label for="validationCustom03" class="form-label">Màu sắc </label>
                            <select class="form-control" name="mau_sac_id" id="">
                                <option value="<%- data.mau_sac_id %>"> <%- data.ten_mau_sac%> </option>
                                <% if (mau_sac_List && mau_sac_List.length> 0) { %>
                                    <% mau_sac_List.forEach(function (mau_sac_List, index) { %>
                                        <option value="<%- mau_sac_List.id %>"><%- mau_sac_List.ten_mau_sac%></option>
                                        <% }); %>
                                            <% } else { %>

                                                <p>Không có dữ liệu</p>

                                                <% } %>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="validationCustom03" class="form-label">Dung lượng </label>
                            <select class="form-control" name="dung_luong_id" id="">
                                <option value="<%- data.dung_luong_id %>"> <%- data.ten_dung_luong %> </option>
                                <% if (dung_luong_List && dung_luong_List.length> 0) { %>
                                    <% dung_luong_List.forEach(function (dung_luong_List, index) { %>
                                        <option value="<%- dung_luong_List.id %>"><%- dung_luong_List.ten_dung_luong%>
                                        </option>
                                        <% }); %>
                                            <% } else { %>

                                                <p>Không có dữ liệu</p>

                                                <% } %>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="validationCustom02" class="form-label">Giá bán</label>
                            <input type="text" name="gia_ban" class="form-control" id="validationCustom02"
                                value="<%= data.gia_ban %>" required>
                        </div>
                        <div class="col-md-4">
                            <label for="validationCustom03" class="form-label">Serial </label>
                            <input type="text" name="serial" class="form-control" id="validationCustom03"
                                value="<%= data.serial %>" required>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Submit form</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
        <!-- /.content-wrapper -->
        <%- include('../footer.ejs') %>